<Window x:Class="CaliburnMicro.Transitions.ShellView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Border Padding="30"
			Background="Black">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250" />
				<ColumnDefinition Width="30" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Border Height="200"
					VerticalAlignment="Top"
					Background="Orange"
					Padding="10 10 0 0">
				<TextBlock Foreground="White"
						   FontSize="15"
						   TextWrapping="Wrap">
					<Run Text="Animated zone activation" />
					<LineBreak />
					<LineBreak />
					<Run Text="Caliburn.Micro" />
					<Run Text="TransitioningContentControl" />
				</TextBlock>
			</Border>

			<Grid Grid.Column="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition Width="30" />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition Height="30" />
					<RowDefinition />
				</Grid.RowDefinitions>

				<ContentControl x:Name="Zone1" />
				<ContentControl x:Name="Zone2"
								Grid.Column="2" />
				<ContentControl x:Name="Zone3"
								Grid.Row="2" />
				<ContentControl x:Name="Zone4"
								Grid.Row="2"
								Grid.Column="2" />
			</Grid>
		</Grid>
	</Border>
</Window>